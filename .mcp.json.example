{
  "mcpServers": {
    "filesystem": {
      "comment": "Local filesystem access via stdio MCP server",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/path/to/allowed/directory"],
      "env": {
        "ALLOWED_PATHS": "${ALLOWED_PATHS:-/Users/username/projects}"
      }
    },
    "github": {
      "comment": "GitHub MCP server for repository operations",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      }
    },
    "postgres": {
      "comment": "PostgreSQL database access via HTTP MCP server",
      "type": "http",
      "url": "https://postgres-mcp.example.com/mcp",
      "headers": {
        "Authorization": "Bearer ${POSTGRES_MCP_TOKEN}",
        "X-API-Key": "${POSTGRES_API_KEY:-default-api-key}"
      }
    },
    "slack": {
      "comment": "Slack integration via SSE (Server-Sent Events) MCP server",
      "type": "sse",
      "url": "https://slack-mcp.example.com/sse",
      "headers": {
        "Authorization": "Bearer ${SLACK_TOKEN}"
      }
    }
  }
}
