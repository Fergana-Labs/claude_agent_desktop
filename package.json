{
  "name": "claude-agent-desktop",
  "version": "1.0.0",
  "description": "Desktop application for Claude Agent with AI-powered coding assistance",
  "type": "module",
  "main": "dist/main/index.js",
  "scripts": {
    "postinstall": "electron-rebuild -f -w better-sqlite3",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "npm run build:main && NODE_ENV=development electron .",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json && tsc -p tsconfig.preload.json",
    "package": "electron-builder",
    "start": "electron ."
  },
  "keywords": [
    "electron",
    "claude",
    "ai",
    "office"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^39.1.1",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^7.2.2",
    "vite-plugin-electron": "^0.28.2"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.0",
    "@anthropic-ai/sdk": "^0.68.0",
    "better-sqlite3": "^9.2.2",
    "docx": "^8.5.0",
    "dotenv": "^17.2.3",
    "exceljs": "^4.4.0",
    "lucide-react": "^0.553.0",
    "mammoth": "^1.11.0",
    "node-machine-id": "^1.1.12",
    "pptxgenjs": "^3.12.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1"
  },
  "build": {
    "appId": "com.claude.agent.desktop",
    "productName": "Claude Agent Desktop",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      ".claude/**/*",
      "plugins/**/*",
      "logo.png"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "logo.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ]
    },
    "dmg": {
      "sign": false
    },
    "afterSign": "scripts/notarize.js",
    "win": {
      "target": "nsis",
      "icon": "logo.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "logo.png"
    }
  }
}
